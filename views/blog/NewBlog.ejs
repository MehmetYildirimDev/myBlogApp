<%- include ('../partials/header') %>

<ckeditor:ckeditorcontrol runat="server" id="txt" name="" width="870" ClientIDMode="Static"></ckeditor:ckeditorcontrol>

    <script>

        $(document).ready(function(){
        

            $("#myButton").click(function(){
                var blogTitle = $('#blogTitle').val();
                var comSentence = $('#comSentence').val();
                var comImage = $('#comImage').val();
                var Blog = CKEDITOR.instances.editor.getData(); 

                console.log(blogTitle + "---" + comSentence + "---" + comImage + "---" + Blog);
                
            });
            

        });

    </script>

    <!-- Page Header-->
    <header class="masthead"
        style="background-image: url('https://cdn.pixabay.com/photo/2022/06/21/16/18/orange-7276122__340.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Clean Blog</h1>
                        <span class="subheading">A Blog Theme by Start Bootstrap</span>
                    </div>
                </div>
            </div>
        </div>
    </header>




    <div class="container">
        <h2 style="text-align:center; margin-bottom: 40px;">Add a New Blog</h2>
        <form>
            <div class="form-group">
                <label for="blogTitle">Blog Title</label>
                <input class="form-control" type="text" id="blogTitle" placeholder="Blog Title">
            </div>

            <div class="form-group">
                <label for="comSentence">Blog Commercial Sentence</label>
                <input class="form-control" type="text" id="comSentence" placeholder="Blog Title">
            </div> 

            <div class="form-group">
                <label for="comImage">Blog com Image</label>
                <input class="form-control" type="text" id="comImage" placeholder="Blog Title">
            </div>

            <textarea name="editor" id="editor" ></textarea>
           
        </form>
        <button id="myButton" class="btn btn-primary">Submit</button>

    </div>
    <script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('editor'); 
    </script>

